<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DnTech</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body class="@ViewData["BodyClass"]">
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="bi bi-shield-lock"></i>
                    <strong>DnTech</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-door me-1"></i>
                                Inicio
                            </a>
                        </li>

                        @* Mostrar solo cuando NO esté autenticado *@
                        @if (string.IsNullOrEmpty(Context.Request.Cookies["AuthToken"]))
                        {
                            <li class="nav-item ms-lg-2">
                                <a class="btn btn-outline-light" asp-area="" asp-page="/Auth/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>
                                    Iniciar Sesión
                                </a>
                            </li>
                            <li class="nav-item ms-lg-2">
                                <a class="btn btn-light" asp-area="" asp-page="/Auth/Register">
                                    <i class="bi bi-person-plus me-1"></i>
                                    Registrarse
                                </a>
                            </li>
                        }
                        else
                        {
                            @* Mostrar cuando esté autenticado *@
                            <li class="nav-item">
                                <span class="nav-link user-badge">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @Context.Request.Cookies["UserName"]
                                </span>
                            </li>
                            <li class="nav-item ms-lg-2">
                                <form method="post" asp-page="/Auth/Logout" style="display: inline;">
                                    <button type="submit" class="btn btn-outline-light" onclick="return confirm('¿Estás seguro de que deseas cerrar sesión?');">
                                        <i class="bi bi-box-arrow-right me-1"></i>
                                        Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-custom">
        <div class="container text-center">
            <p>
                &copy; @DateTime.Now.Year <strong>DnTech</strong> - Sistema de Autenticación con Clean Architecture
                <span class="mx-2">|</span>
                <a asp-area="" asp-page="/Privacy">Política de Privacidad</a>
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>